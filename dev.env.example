# ========================================
# Переменные окружения для Super Mock DEV (пример)
# ========================================

# ========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ========================================
DATABASE_URL=postgresql://Super Mock:postgres@db:5432/Super Mock
DATABASE_URL_SECONDARY=postgresql://Super Mock2:postgres@db_secondary:5432/Super Mock_secondary
POSTGRES_DB=Super Mock
POSTGRES_USER=Super Mock
POSTGRES_PASSWORD=postgres

# Secondary DB (Dev)
POSTGRES_DB_SECONDARY=Super Mock_secondary
POSTGRES_USER_SECONDARY=Super Mock2
POSTGRES_PASSWORD_SECONDARY=postgres

# ========================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# TELEGRAM BOT НАСТРОЙКИ
# ========================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
VITE_TELEGRAM_BOT_NAME=YOUR_BOT_NAME

# ========================================
# URL НАСТРОЙКИ
# ========================================
FRONTEND_URL=http://localhost:8081
BACKEND_URL=http://localhost:3001
VITE_API_URL=http://localhost:3001

# Jitsi base URL (optional; for self-hosted testing)
VITE_JITSI_URL=http://localhost

# WebRTC ICE (dev)
# Multiple STUN can be comma-separated
VITE_STUN_URLS=stun:stun.l.google.com:19302
# If you have a TURN server, set these:
# VITE_TURN_URL=turn:turn.example.com:3478
# VITE_TURN_USERNAME=user
# VITE_TURN_PASSWORD=pass

# ========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ========================================
# Логирование
LOG_LEVEL=debug

# CORS настройки
CORS_ORIGIN=http://localhost:8081,http://localhost:3001

# Prisma настройки
PRISMA_GENERATE_DATAPROXY=false

# Redis настройки
REDIS_URL=redis://redis:6379

# ========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ========================================
# Секретный ключ для сессий
SESSION_SECRET=dev_secret_key_123

# JWT секрет
JWT_SECRET=dev_jwt_secret_123

# ========================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ========================================
# Количество воркеров
WORKERS=1

# Таймауты
REQUEST_TIMEOUT=30000
SOCKET_TIMEOUT=60000

# ========================================
# НАСТРОЙКИ МОНИТОРИНГА
# ========================================
# Health check endpoint
HEALTH_CHECK_PATH=/api/health

# Метрики
ENABLE_METRICS=false
METRICS_PORT=9090
