# Jitsi Docker env example

# Public domain where Jitsi will be available
JITSI_DOMAIN=jitsi.example.com

# Internal component passwords (set strong values in real .env)
JICOFO_COMPONENT_SECRET=change_me_component
JICOFO_AUTH_PASSWORD=change_me_jicofo
JVB_AUTH_PASSWORD=change_me_jvb

# Authentication
ENABLE_AUTH=0
ENABLE_GUESTS=1

# Lobby (disable to avoid membersOnly if no moderator)
ENABLE_LOBBY=0

# Public URL used by clients
PUBLIC_URL=https://${JITSI_DOMAIN}

# Timezone
TZ=UTC

# XMPP settings
XMPP_DOMAIN=meet.jitsi
XMPP_SERVER=prosody
XMPP_BOSH_URL_BASE=http://prosody:5280
XMPP_AUTH_DOMAIN=auth.meet.jitsi
XMPP_MUC_DOMAIN=muc.meet.jitsi
XMPP_INTERNAL_MUC_DOMAIN=internal-muc.meet.jitsi

# Video bridge
JVB_PORT=10000
JVB_TCP_HARVESTER_DISABLED=true

# LetsEncrypt (enable only if exposing ports 80/443 on web service)
ENABLE_LETSENCRYPT=0
LETSENCRYPT_DOMAIN=${JITSI_DOMAIN}
LETSENCRYPT_EMAIL=admin@${JITSI_DOMAIN}

# Frontend behavior tweaks (web container config)
# Disable third-party requests like Amplitude
CONFIG_disableThirdPartyRequests=true
# Optional: disable prejoin page since we embed
ENABLE_PREJOIN_PAGE=0


