# ===========================================
# TELEGRAM AUTH CONFIGURATION
# ===========================================

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# JWT Secret для подписи токенов (сгенерировать случайную строку)
JWT_SECRET=your_jwt_secret_here

# URL фронтенда для редиректов
FRONTEND_URL=https://app.supermock.ru

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Использовать MongoDB (true/false)
USE_MONGODB=false

# URL подключения к базе данных
DATABASE_URL=postgresql://username:password@localhost:5432/supermock

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Порт сервера
PORT=3000

# Режим окружения
NODE_ENV=development

# Хост сервера
HOST=localhost

# ===========================================
# REDIS CONFIGURATION (опционально)
# ===========================================

# Использовать Redis для кеширования
USE_REDIS=false

# URL подключения к Redis
REDIS_URL=redis://localhost:6379

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CORS настройки
CORS_ORIGIN=https://app.supermock.ru

# Максимальное количество попыток ввода кода
MAX_VERIFICATION_ATTEMPTS=3

# Время жизни кода верификации (в минутах)
VERIFICATION_CODE_EXPIRY=5

# Время жизни JWT токена (в днях)
JWT_EXPIRY_DAYS=30

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Уровень логирования (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# TELEGRAM AUTH SPECIFIC SETTINGS
# ===========================================

# Длина кода верификации
VERIFICATION_CODE_LENGTH=6

# Автоматическая очистка истекших кодов (в минутах)
CODE_CLEANUP_INTERVAL=5

# Максимальное количество активных кодов на номер
MAX_CODES_PER_PHONE=3
