# ========================================
# Переменные окружения для Super Mock на Dokploy
# ========================================

# ========================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ========================================
DATABASE_URL=postgresql://Super Mock:YOUR_SECURE_PASSWORD@postgres:5432/Super Mock
POSTGRES_DB=Super Mock
POSTGRES_USER=Super Mock
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# ========================================
# НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ========================================
NODE_ENV=production
PORT=3000

# ========================================
# TELEGRAM BOT НАСТРОЙКИ
# ========================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
VITE_TELEGRAM_BOT_NAME=YOUR_BOT_NAME

# ========================================
# URL НАСТРОЙКИ
# ========================================
FRONTEND_URL=https://supermock.ru
BACKEND_URL=https://api.supermock.ru/api
VITE_API_URL=https://api.supermock.ru

# ========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ========================================
# Логирование
LOG_LEVEL=info

# CORS настройки
CORS_ORIGIN=https://supermock.ru,https://api.supermock.ru

# Prisma настройки
PRISMA_GENERATE_DATAPROXY=false

# Redis настройки (если используется)
REDIS_URL=redis://redis:6379

# ========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ========================================
# Секретный ключ для сессий
SESSION_SECRET=YOUR_SESSION_SECRET_HERE

# JWT секрет (если используется)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# ========================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ========================================
# Количество воркеров
WORKERS=2

# Таймауты
REQUEST_TIMEOUT=30000
SOCKET_TIMEOUT=60000

# ========================================
# НАСТРОЙКИ МОНИТОРИНГА
# ========================================
# Health check endpoint
HEALTH_CHECK_PATH=/api/health

# Метрики
ENABLE_METRICS=true
METRICS_PORT=9090